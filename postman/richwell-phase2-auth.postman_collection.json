{
  "info": {
    "name": "Richwell Portal - Phase 2 Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Authentication and role-guarded endpoints for Richwell College Portal Phase 2."
  },
  "item": [
    {
      "name": "Auth / Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"ChangeMe123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Auth / Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "me"]
        }
      },
      "response": []
    },
    {
      "name": "Auth / Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "logout"]
        }
      },
      "response": []
    },
    {
      "name": "Auth / Request Reset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/request-reset",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "request-reset"]
        }
      },
      "response": []
    },
    {
      "name": "Auth / Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"<paste reset token>\",\n  \"password\": \"NewPassword123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/reset",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "reset"]
        }
      },
      "response": []
    },
    {
      "name": "Role Gate / Student",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/roles/student",
          "host": ["{{baseUrl}}"],
          "path": ["roles", "student"]
        }
      },
      "response": []
    },
    {
      "name": "Role Gate / Registrar",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/roles/registrar",
          "host": ["{{baseUrl}}"],
          "path": ["roles", "registrar"]
        }
      },
      "response": []
    },
    {
      "name": "Role Gate / Dean",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/roles/dean",
          "host": ["{{baseUrl}}"],
          "path": ["roles", "dean"]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    }
  ]
}
